<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>

    <labelframe text="Cycle">
        <font>("Helvetica",10)</font>
        <hbox>
            <label>
                <text>"Time: "</text>
                <font>("Helvetica",14)</font>
            </label>
            <u32>
                <halpin>"cycle-time.hours"</halpin>
                <font>("Helvetica",14)</font>
                <format>"02d"</format>
            </u32>
            <label>
                <text>":"</text>
                <font>("Helvetica",14)</font>
            </label>
            <u32>
                <halpin>"cycle-time.minutes"</halpin>
                <font>("Helvetica",14)</font>
                <format>"02d"</format>
            </u32>
            <label>
                <text>":"</text>
                <font>("Helvetica",14)</font>
            </label>
            <u32>
                <halpin>"cycle-time.seconds"</halpin>
                <font>("Helvetica",14)</font>
                <format>"02d"</format>
            </u32>
        </hbox>
    </labelframe>

    <labelframe text="Speed">
        <font>("Helvetica",16)</font>
        <vbox>
            <meter>
                <halpin>"spindle-speed-meter"</halpin>
                <subtext>"Motor\nRPM"</subtext>
                <size>150</size>
                <min_>0</min_>
                <max_>2000</max_>
                <majorscale>1000</majorscale>
                <minorscale>100</minorscale>
            </meter>

            <hbox>
                <label><text>"Spindle"</text></label>
                <number>
                    <halpin>"spindle-speed-number"</halpin>
                    <font>("Helvetica",14)</font>
                    <format>"4.1f"</format>
                </number>
            </hbox>
        </vbox>
    </labelframe>

    <labelframe text="Spindle Gear">
        <font>("Helvetica",16)</font>

        <vbox>
            <hbox>
                <label><text>"High"</text></label>
                <led>
                    <halpin>"highgear-led"</halpin>
                    <size>20</size>
                </led>
            </hbox>

            <hbox>
                <label><text>"Low"</text></label>
                <led>
                    <halpin>"lowgear-led"</halpin>
                    <size>20</size>
                </led>
            </hbox>

            <button>
                <text>"Change Gears"</text>
                <halpin>"gearchange-button"</halpin>
                <disable_pin>True</disable_pin>
            </button>
        </vbox>
    </labelframe>

    <labelframe text="Speeder">
        <font>("Helvetica",16)</font>

        <vbox>
            <hbox>
                <label><text>"Installed"</text></label>
                <led>
                    <halpin>"speeder-installed-led"</halpin>
                    <size>20</size>
                </led>
            </hbox>

            <button>
                <text>"Select speeder"</text>
                <halpin>"speeder-change-button"</halpin>
                <disable_pin>True</disable_pin>
            </button>
        </vbox>
    </labelframe>

    <labelframe text="Watchdog">
        <font>("Helvetica",16)</font>

        <vbox>
            <hbox>
                <label><text>"Error"</text></label>
                <led>
                    <halpin>"watchdog-led"</halpin>
                    <size>20</size>
                    <on_color>"red"</on_color>
                    <off_color>"green"</off_color>
                </led>
            </hbox>
        </vbox>
    </labelframe>

    <labelframe text="Shuttle">
        <font>("Helvetica",16)</font>

        <vbox>
            <hbox>
                <label><text>"X"</text></label>
                <led>
                    <halpin>"shuttle-x"</halpin>
                    <size>10</size>
                </led>
                <label><text>"Y"</text></label>
                <led>
                    <halpin>"shuttle-y"</halpin>
                    <size>10</size>
                </led>
                <label><text>"Z"</text></label>
                <led>
                    <halpin>"shuttle-z"</halpin>
                    <size>10</size>
                </led>
                <label><text>"A"</text></label>
                <led>
                    <halpin>"shuttle-a"</halpin>
                    <size>10</size>
                </led>
            </hbox>
            <hbox>
                <label><text>"Step"</text></label>
                <number>
                    <halpin>"shuttle-step"</halpin>
                    <font>("Helvetica",14)</font>
                    <format>"1.4f"</format>
                </number>
            </hbox>
        </vbox>
    </labelframe>

</pyvcp>
